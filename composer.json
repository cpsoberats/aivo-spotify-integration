{
    "description": "Aivo Spotify Api to get albums by band name",
    "authors": [
        {
            "name": "Carlos Pedro Soberats Sanchez",
            "email": "cpsoberats@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "^7.4",
        "slim/slim": "3.*",
        "slim/psr7": "^1.2",
        "monolog/monolog": "^2.1",
        "php-di/php-di": "^6.3",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
